{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "esnext",
    "lib": [
      "dom",
      "es7"
    ],
    "declaration": true,
    "declarationDir": "dist/types",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/lib",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types",
      "src/types/*"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
